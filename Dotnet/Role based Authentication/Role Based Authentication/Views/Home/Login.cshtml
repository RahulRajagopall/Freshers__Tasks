 @model User


	<body style="background-color: rgb(175, 235, 235);">
	<section class="ftco-section">
		<div class="container" style="margin-top: -90px;margin-left: 200px;overflow:hidden;">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
					
					<div class="login-wrap p-4 p-md-5">
			      	    <div class="d-flex">
			      		    <div class="w-100">
			      			    <h3 style="margin-left: 120px;margin-top: 70px; font-family:Times new roman; color:rgb(0, 0, 0); font-weight:bold;" class="mb-4">LOG IN</h3>
			      		    </div>
			      	    </div>
						<form method="post" class="signin-form">
			      		    <div class="form-group mb-3">
			      			<label class="label" for="name">Username</label>
			      			<input type="text" class="form-control" asp-for="Username" placeholder="Username" title="Username should minimum of 3 characters and maximum of 50 characters"required>
			      		</div>
		            <div class="form-group mb-3">
		            	<label class="label" for="password">Password</label>
		              <input type="password" class="form-control" asp-for="Password" asp-area="Password" placeholder="Password" title="Must contain atleast One Number,One Uppercase,One Lowercase and One Special Character,and have atleast 8 or more characters" required>
		            </div>
					<div class="form-group mb-3">
		            	<label style="color:red; margin-left:110px">@ViewBag.message</label>
		            </div>
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3" style="background-color: rgb(84, 194, 62);">Sign In</button>
		            </div>
		            <div class="form-group d-md-flex">
						<div class="w-50" style="margin-left: 235px;">
							<a asp-action="Forgotpassword" style="color:rgb(86, 194, 62);">Forgot Password</a>
						</div>
		            </div>
		          </form>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>


	</body>